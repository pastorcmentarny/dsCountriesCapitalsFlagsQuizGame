        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grade_great</item>
        <item name="android:shadowColor">@color/grade_great_shadow</item>
    </style>

    <style name="grade_good">
