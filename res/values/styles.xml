        <item name="android:shadowColor">@color/grade_poor_shadow</item>
    </style>

    <style name="grade_fail">
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grade_fail</item>
        <item name="android:shadowColor">@color/grade_awesome_shadow</item>
    </style>

    <style name="grade_epic_fail">
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grade_epic_fail</item>
        <item name="android:shadowColor">@color/grade_epic_fail_shadow</item>
    </style>

    <style name="spinner_custom_game">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/spinner_background_main</item>
        <item name="android:popupBackground">@color/spinner_background_popup</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>